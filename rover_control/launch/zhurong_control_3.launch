<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <rosparam file="$(find rover_control)/config/zhurong_rover_control_3.yaml"
            command="load"/>

  <node name="robot_state_publisher_zhurong_mars_rover" pkg="robot_state_publisher" type="robot_state_publisher"
        respawn="false" output="screen">
            <param name="publish_frequency" type="double" value="50.0" />
            
            <remap from="/joint_states" to="/zhurong_mars_rover/joint_states" />
        </node>


  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
        output="screen" args="--namespace=/zhurong_mars_rover
                              joint_state_controller 
                              left_front_wheel_velocity_controller
                              right_front_wheel_velocity_controller
                              back_wheel_velocity_controller
                              steer_joint_position_controller

                              --shutdown-timeout 3">
  </node>

</launch>

